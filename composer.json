{
    "name": "juzaweb/juzacms",
    "type": "project",
    "description": "Progmix Content Management System (CMS)",
    "keywords": [
        "framework",
        "laravel",
        "progmix",
        "cms"
    ],
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "packages/progmix/*"
        }

    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "progmix/packages": "*",
        "guzzlehttp/guzzle": "^7.2",
        "intervention/imagecache": "^2.5",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "maatwebsite/excel": "^3.1",
        "spatie/laravel-csp": "^2.9",
        "matthewbdaly/laravel-azure-storage": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.10",
        "barryvdh/laravel-ide-helper": "^3.0",
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.6.7",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Juzaweb\\": "modules/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "modules/CMS/Helpers/helpers.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan juzacms:plugin-autoload"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan juzacms:plugin-autoload"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan juzacms:plugin-autoload"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
